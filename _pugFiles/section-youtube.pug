mixin rec(name, desc, image, url)
  .col-50
    a(href!=url)
      .img-aux(style=" background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.3)), url(" + image + ") ",
      data-title!=name
      data-description!=desc
      ).workRec
        .caption=desc

section.youtube
  .flex.flex--center.work-header
    h2 Work
  .flex.flex--center.work
    | {% for post in site.posts %}
    |   {% if post.type == "work" %}
    +rec("{{ post.name }}", "{{ post.about }}", "{{ site.baseurl }}assets/img/d1.jpg", "{{ site.baseurl }}{{ post.url }}")
    |   {% endif %}
    | {% endfor %}
    +rec("Cupcakes da caca", "Brand and website", "{{ site.baseurl }}assets/img/work22.jpg")
